<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Meine Bewertungen</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th><b>#</b></th>
                        <th>Kursname</th>
                        <th>Schüler</th>
                        <th>Erstellt am.</th>
                        <th>Ansehen & Bearbeiten</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th><b>#</b></th>
                        <th>Kursname</th>
                        <th>Schüler</th>
                        <th>Erstellt am.</th>
                        <th>Ansehen & Bearbeiten</th>
                    </tr>
                </tfoot>
                <tbody>
                    {{genMeineBewertungen kurse}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Die letzte Bewertung wurde am <b>{{least_bewertung}}</b> erstellt.</div>
</div>

</div>

<script>
    // Basic example
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "ordering": true, // false to disable sorting (or any other option)
            "paging": true,
            "info": false,
            "searching": true,
            "language": {
                "lengthMenu": "Zeige _MENU_ Bewertungen pro Seite",
                "zeroRecords": "Keine Übereinstimmung",
                "search": "Suche:",
                "paginate": {
                    "first":      "Zurück",
                    "last":       "Zurück",
                    "next":       "Nächste Seite",
                    "previous":   "Vorherige Seite"
                },
            }
        });
        $('.dataTables_length').addClass('bs-select');
    });
</script>