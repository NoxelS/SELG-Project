<div class="card">
    <div class="card-header">
        <i class="fas fa-user-graduate text-primary mr-1"></i> <b>{{name}}</b>
    </div>
    <div class="card-body">

        <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
            <tbody>
                <tr>
                    <th scope="row">Name</th>
                    <td style="width: 75%;">{{name}}</td>
                </tr>
                <tr>
                    <th scope="row">Stufe</th>
                    <td style="width: 75%;">{{stufe}}</td>
                </tr>
                <tr>
                    <th scope="row">Klasse</th>
                    <td style="width: 75%;">{{klasse}}</td>
                </tr>
                <tr>
                    <th scope="row">Klassenlehrer</th>
                    <td style="width: 75%;">{{klassenlehrer}}</td>
                </tr>                
            </tbody>
        </table>
    </div>
</div>