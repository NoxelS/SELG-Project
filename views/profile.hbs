<div id="accordion">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true"
                    aria-controls="collapseOne">
                    Mein Profil
                </button>
            </h5>
        </div>

        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body px-4">
                <div class="ml-2">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <td><b>Benutzername</b></td>
                                <td style="width: 75%">{{username}}</td>
                            </tr>
                            <tr>
                                <td><b>Anzeigename</b></td>
                                <td style="width: 75%">{{vorname}} {{nachname}}</td>
                            </tr>
                            <tr>
                                <td><b>Accountart</b></td>
                                <td style="width: 75%">{{permission}}</td>
                            </tr>
                            <tr>
                                <td><b>Benutzer ID</b></td>
                                <td style="width: 75%">#{{user_id}}
                                    <a data-toggle="tooltip" data-placement="top"
                                        title="Die Benutzer ID ist nötig, um Daten mit einem Konto zu verknüpfen. Sie ist für den Nutzer jedoch nicht wichtig."><b
                                            class="text-primary"> ?</b></td>
                            </tr>
                            <tr>
                                <td><b>Kurse:</b></td>
                                <td style="width: 75%">{{#if kurse_count}}{{kure_count}}{{else}}n/a{{/if}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div name="spacer" class="mt-3"></div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
    $('#kurse_count').tooltip(options)
</script>